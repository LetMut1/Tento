FROM rust:1.80.0
RUN \
    mkdir -p /_tento
RUN \
    rustup default 1.80.0-x86_64-unknown-linux-gnu
RUN \
    rustup toolchain install nightly-x86_64-unknown-linux-gnu
RUN \
    rustup component add --toolchain=1.80.0-x86_64-unknown-linux-gnu \
        clippy \
        rust-src
RUN \
    rustup component add --toolchain=nightly-x86_64-unknown-linux-gnu \
        rustfmt
RUN \
    rustup target add --toolchain=1.80.0-x86_64-unknown-linux-gnu \
        aarch64-apple-ios \
        aarch64-apple-ios-sim \
        aarch64-linux-android \
        x86_64-apple-ios \
        x86_64-linux-android